{{>header}}

    <div class="container">
        <!-- <h1 class="title is-3">PETable</h1> -->
    </div>

    <div class="loginBox box">
        <h2 class="loginTitle title is-2">Log In</h2>

        <form class="oneColumn">
                <div class="field">
                    <label class="label">Username or Email</label>
                    <div class="control">
                        <input class="input" type="username" placeholder="">
                    </div>
                </div>

                <div class="field">
                    <label class="label">Password</label>
                    <div class="control">
                        <input class="input" type="password" placeholder="********">
                    </div>
                </div>
        </form>

        <button class="button ">Sign In</button>

        <div class="content">Not a member? <a href="/signup"><strong class="createAccountLink">Create an account</strong></a></div>
    </div>

    <script src="/js/login.js"></script>